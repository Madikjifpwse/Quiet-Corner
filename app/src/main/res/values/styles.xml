<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
    Этот тег <resources> является единственным "корнем" файла.
    Все стили теперь находятся внутри него.
    -->

    <style name="ProfileButtonContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/bg_profile_button</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="ProfileButtonIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="ProfileButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">@color/foreground</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
